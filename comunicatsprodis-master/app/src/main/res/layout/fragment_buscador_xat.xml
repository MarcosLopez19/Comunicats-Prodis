<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".buscador_xat">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/data_buscador"
            style="@style/Widget.ComunicaProdis.TextSize_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/buscadorXat_textView_marginStart"
            android:layout_marginTop="@dimen/buscadorXat_textView_marginTop"
            android:text="@string/data"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/avatar_buscador_xat"
            android:layout_width="@dimen/buscadorXat_imageView_width"
            android:layout_height="@dimen/buscadorXat_imageView_height"
            android:layout_marginTop="@dimen/buscadorXat_imageView_marginTop"
            app:layout_constraintTop_toBottomOf="@+id/data_buscador"
            tools:ignore="MissingConstraints,ImageContrastCheck"
            tools:layout_editor_absoluteX="30dp"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/nom_buscador"
            style="@style/Widget.ComunicaProdis.TextSize_nom_xat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/buscadorXat_textView_marginStart"
            android:text="@string/nom_xat"
            app:layout_constraintStart_toEndOf="@+id/avatar_buscador_xat"
            tools:layout_editor_absoluteY="55dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/contingut"
            style="@style/Widget.ComunicaProdis.TextSize_xat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/buscadorXat_textView_marginStart"
            android:layout_marginTop="@dimen/buscadorXat_textView2_marginTop"
            android:text="@string/xat"
            app:layout_constraintStart_toEndOf="@+id/avatar_buscador_xat"
            app:layout_constraintTop_toBottomOf="@+id/nom_buscador" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>